<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/owner-profile.css" type="text/css" />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <title>Owner Profile</title>
  </head>

  <body>
    <a href="/">Home</a>
    <div class="profile">
      <div class="image-container">
        <img
          class="owner-img"
          src="<%= photo? `../img/${photo}` : 'https://bootdey.com/img/Content/avatar/avatar7.png' %>"
          alt="Admin"
          class="rounded-circle"
          width="150"
        />
      </div>
      <% if(profileUser) { %>
      <div class="info">
        <h2><%=name%></h2>
        <h4>@<%=username%></h4>
        <% if(currentUser===profileUser) { %>
        <div class="buttons">
          <a href="../../flat/register">
            <button class="button-3">
              <strong class="fas fa-plus" style="font-size: larger"></strong>
              Add Flat
            </button></a
          >
          <a href="../edit/<%= profileUser %> ">
            <button class="button-3">
              <i class="fas fa-edit"></i> Edit Profile
            </button></a
          >
        </div>
        <% } %>
      </div>
    </div>
    <hr class="line" />
    <div class="lol">
      <%- include ("../partials/showOwnerAllFlats.ejs", {misc, flatList}) %>
    </div>
    <%} else { %>
    <p>USER NOT FOUND!</p>
    <% } %>
  </body>
</html>
