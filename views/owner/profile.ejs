<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/x-icon" href="/images/favicon.svg">
  <link rel="stylesheet" href="/css/owner-profile.css" type="text/css" />
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <title>Owner Profile</title>
</head>

<body>
  <%- include("../partials/navbar.ejs") %>
    <!-- <a href="../..">Home</a> -->
    <% if(misc.userExists()) { %>
      <div class="container">
        <div class="blue-container">
          <div class="profile">
            <img class="owner-img" src="<%= profile.photo? `../img/${profile.photo}` : "http://bootdey.com/img/Content/avatar/avatar1.png" %>"
            class="rounded-circle"
            width="200"
            />
            <h2>
              <%=profile.name%>
            </h2>
            <h4>@<%=profile.username%>
            </h4>
            <% if(user.id===profile.username) { %>
              <div class="buttons">
                <a href="../../flat/register">
                  <button class="button-3">
                    <strong class="fas fa-plus"></strong>
                    Add Flat
                  </button></a>
                <a href="../edit/<%= profile.username %> ">
                  <button class="button-3">
                    <i class="fas fa-edit"></i> Edit Profile
                  </button></a>
              </div>
              <% } %>
          </div>
          <div class="lol" style="margin-left:33vw">
            <div class="upper-layer">
              <div class="all-flats">
                <%- include ("../partials/showOwnerAllFlats.ejs", {misc, flatList}) %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%} else { %>
        <p>USER NOT FOUND!</p>
        <% } %>

      <%# include("../partials/footer.ejs") %>
</body>

</html>