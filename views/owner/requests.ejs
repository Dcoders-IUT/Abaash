<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Requests</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap");
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /* font-family: Lato, Helvetica,sans-serif; */
          font-family: 'Montserrat',  sans-serif;
      }

      .container {
        width: 100vw;
        height: 95vh;
        background-image: linear-gradient(
            110deg,
            rgba(255, 255, 255, 0.7) 50%,
            transparent 50%
          ),
          url("/images/home5.jpg");
        background-size: 100% 100%;
        /* display: flex;
          align-items: center; */
      }
    </style>
  </head>
  <body>
    <a href="../..">Home</a>
    <div class="container">
      <h1>Requests</h1>
      <table border="1">
        <tr>
          <td>Student</td>
          <td>Flat</td>
          <td>Request Date</td>
          <td>Phone Number</td>
          <td>E-mail</td>
        </tr>
        <% flatRequestList.forEach(request => { %>
        <tr>
          <td><a href="../../student/profile/<%= request.student.studentID %>"><%= request.student.name %></a></td>
          <td><a href="../../flat/profile/<%= request.flat.flatID %>"><%= request.flat.name %></a></td>
          <td><%= request.date %></a></td>
          <td><%= request.student.phone %></a></td>
          <td><%= request.student.email %></a></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
