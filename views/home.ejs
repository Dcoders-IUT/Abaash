<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home - Abaash</title>
    <link rel="stylesheet" href="../css/styles.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Galada&family=Montserrat:ital,wght@0,600;1,500&family=Righteous&display=swap"
    />
    <!-- Awesome fonts -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body>
    <div class="nav">
      <ul class="navbar-list">
        <li>
          <a
            class="fa fa-home fa-2x"
            href="#"
            style="margin-right: -10px; margin-left: 10px"
          ></a>
        </li>
        <% if(currentUser) { %>
        <li>
          <a href="<%=mode%>/profile/<%=currentUser%>">
            <%=nameOfCurrentUser? nameOfCurrentUser: currentUser%>
          </a>
        </li>
        <li><a href="logout">Log Out</a></li>

        <% if(mode==='student' ) { %>
        <li><a href="student/coupon">Coupon</a></li>
        <li><a href="student/notifications">Notifications</a></li>
        <% } %>

        <li><a href="map">Map</a></li>
        <li><a href="owner/requests">Requests</a></li>
        <li><a href="sos">SOS</a></li>

        <% } else { %>
        <li><a href="student/login">Log In</a></li>
        <% } %>
      </ul>
    </div>
    <%- include('./partials/advanced_search.ejs', { misc }) %>
    <br />
    <!-- <h2>Dashboard</h2> -->

    <%- include ("./partials/showFlats.ejs", {misc, flatList}) %> 
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
