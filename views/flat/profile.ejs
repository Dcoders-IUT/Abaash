<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%=flat? flat.name: 'FLAT NOT FOUND'%></title>
    <link rel="stylesheet" href="/css/single-flat.css" type="text/css" />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /* font-family: Lato, Helvetica,sans-serif; */
        font-family: "Montserrat", sans-serif;
      }

      .container {
        width: 100vw;
        height: 95vh;
        background-image: linear-gradient(
            110deg,
            rgba(255, 255, 255, 0.7) 50%,
            transparent 50%
          ),
          url("/images/home5.jpg");
        background-size: 100% 100%;
        /* display: flex;
          align-items: center; */
      }

      .details {
        /* border:2px solid; */
        box-shadow: 0 5px 20px -6px #000;
        width: 25vw;
        height: fit-content;
        background-color: rgba(255, 255, 255, 0.7);
        color: #20247b;
        margin-left: 10vw;
        padding: 23px;
        position: fixed;
        top: 28vh;
        left: 3vw;
        border-radius: 8px;
      }

      .form-item {
        /* border-bottom: 0.1rem solid #f5f5f5; */
        margin: 7px;
      }

      .attribute {
        width: 88px;
        position: absolute;
      }

      .val {
        font-weight: 700;
        position: relative;
        left: 140px;
        color: #3f7fb7;
      }

      h1 {
        margin-bottom: 30px;
      }

      a {
        text-decoration: none;
      }

      .bb > a {
        color: whitesmoke;
        text-decoration: none;
      }

      .bb {
        appearance: none;
        background-color: #3f7fb7;
        border: 1px solid rgba(27, 31, 35, 0.15);
        border-radius: 6px;
        box-shadow: rgba(27, 31, 35, 0.1) 0 1px 0;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-family: -apple-system, system-ui, "Segoe UI", Helvetica, Arial,
          sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
        font-size: 14px;
        font-weight: 600;
        line-height: 20px;
        padding: 6px 16px;
        position: relative;
        text-align: center;
        text-decoration: none;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        vertical-align: middle;
        white-space: nowrap;
        margin: 15px;
      }

      .bb:focus:not(:focus-visible):not(.focus-visible) {
        box-shadow: none;
        outline: none;
      }

      .bb:hover {
        background-color: #1e64a1;
      }

      .bb:focus {
        box-shadow: rgba(20, 35, 172, 0.4) 0 0 0 3px;
        outline: none;
      }

      .bb:disabled {
        background-color: #94d3a2;
        border-color: rgba(27, 31, 35, 0.1);
        color: rgba(255, 255, 255, 0.8);
        cursor: default;
      }

      .bb:active {
        background-color: #2c379d;
        box-shadow: rgba(20, 70, 32, 0.2) 0 1px 0 inset;
      }
    </style>
  </head>

  <body>
    <a href="../..">Home</a>
    <div class="container">
      <div class="details">
        <% if(flat) { %>
        <h1><%=flat.name%></h1>
        <div class="form-item">
          <label class="attribute">Address</label
          ><span class="val"><a
            href="<%="https://www.google.com/maps/search/?api=1&query="+flat.x+"%2C"+flat.y%>"
            ><%=flat.address%></a></span>
        </div>
        <div class="form-item">
          <label class="attribute">For</label
          ><span class="val"
            ><%=flat.gender? 'Bachelors' : 'Bachelorettes' %></span
          >
        </div>
        <div class="form-item">
          <label class="attribute">Level</label
          ><span class="val"><%=flat.level%></span>
        </div>
        <div class="form-item">
          <label class="attribute"> Owner</label>
          <span class="val"
            ><a href="../../owner/profile/<%=flat.owner%>"
              ><%=owner.name%></a
            ></span
          >
        </div>
        <div class="form-item">
          <label class="attribute">Lift</label
          ><span class="val"><%=flat.lift? 'YES' : 'NO' %></span>
        </div>
        <div class="form-item">
          <label class="attribute">Generator</label
          ><span class="val"><%=flat.generator? 'YES' : 'NO' %></span>
        </div>

        <% if (roomList.bedrooms.length > 0) { %>
        <div>
          <h1>Bedroom: <%= roomList.bedrooms.length %></h1>
          <ul>
            <% roomList.bedrooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.diningrooms.length > 0) { %>
        <div>
          <h1>Dining Room: <%= roomList.diningrooms.length %></h1>
          <ul>
            <% roomList.diningrooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.livingrooms.length > 0) { %>
        <div>
          <h1>Living Room: <%= roomList.livingrooms.length %></h1>
          <ul>
            <% roomList.livingrooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.kitchens.length > 0) { %>
        <div>
          <h1>Kitchen: <%= roomList.kitchens.length %></h1>
          <ul>
            <% roomList.kitchens.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.bathrooms.length > 0) { %>
        <div>
          <h1>Bathroom: <%= roomList.bathrooms.length %></h1>
          <ul>
            <% roomList.bathrooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.balconies.length > 0) { %>
        <div>
          <h1>Balcony: <%= roomList.balconies.length %></h1>
          <ul>
            <% roomList.balconies.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.storerooms.length > 0) { %>
        <div>
          <h1>Store Room: <%= roomList.storerooms.length %></h1>
          <ul>
            <% roomList.storerooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %> <% if (roomList.xtrarooms.length > 0) { %>
        <div>
          <h1>Extra Room: <%= roomList.xtrarooms.length %></h1>
          <ul>
            <% roomList.xtrarooms.forEach(room => { %>
            <li>
              <a href="../../room/profile/<%= room.roomID %> "
                ><h2><%= room.name %></h2></a
              >
            </li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <div class="form-item">
          <span class="attribute">Rent</span
          ><span class="val"><%=flat.rent%></span>
        </div>
      </div>
      <% if(currentUser===flat.owner) { %>
      <button>
        <a href="../edit/<%=flat.flatID%>">Edit Info</a>
      </button>
      <button>
        <a href="../../room/register/<%=flat.flatID%>">Add Rooms</a>
      </button>
      <% } else if (mode==='student') { %>
      <form action="request" method="post">
        <input type="hidden" name="studentID" value="<%= currentUser %>" />
        <input type="hidden" name="flatID" value="<%= flat.flatID %>" />
        <button>Request Reservation</button>
      </form>
      <% } %> <% } else { %>
      <span>FLAT NOT FOUND!</span>
      <% } %>
    </div>
  </body>
</html>
