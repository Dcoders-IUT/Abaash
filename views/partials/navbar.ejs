<style>

ul {
  margin: 0;
  padding: 0;
  list-style: none;
}



:root {

  /**
   * colors
   */

  --dark-jungle-green: hsl(188, 63%, 7%);
  --prussian-blue: hsl(200, 69%, 14%);
  --raisin-black-1: hsl(227, 29%, 13%);
  --raisin-black-2: hsl(229, 17%, 19%);
  --yellow-green: hsl(89, 72%, 45%);
  --orange-soda: hsl(9, 100%, 62%);
  --cultured-1: hsl(0, 0%, 93%);
  --cultured-2: hsl(192, 24%, 96%);
  --misty-rose: hsl(7, 56%, 91%);
  --alice-blue: hsl(210, 100%, 97%);
  --seashell: hsl(8, 100%, 97%);
  --cadet: hsl(200, 15%, 43%);
  --white: hsl(0, 0%, 100%);
  --black: hsl(0, 0%, 0%);
  --opal: hsl(180, 20%, 62%);
  /* my defined  ones  */
  --myc1: rgb(7, 34, 39);
  --myc2: rgb(53, 133, 139);
  --myc3: rgb(79, 189, 186);
  --myc4: rgb(174, 254, 255);


  /**
   * typography
   */

  /* --ff-nunito-sans: "Nunito Sans", sans-serif; */
  /* --ff-poppins: "Poppins", sans-serif; */
  --ff-righteous: 'Righteous', sans-serif;
  --ff-mont: 'Montserrat', sans-serif;
  --ff-galada: 'Galada', cursive;

  --fs-1: 1.875rem;
  --fs-2: 1.5rem;
  --fs-3: 1.375rem;
  --fs-4: 1.125rem;
  --fs-5: 0.875rem;
  --fs-6: 0.813rem;
  --fs-7: 0.75rem;

  --fw-500: 500;
  --fw-600: 600;
  --fw-700: 700;

  /**
   * transition
   */

  --transition: 0.25s ease;

  /**
   * spacing
   */

  --section-padding: 100px;

  /**
   * shadow
   */

  --shadow-1: 0 5px 20px 0 hsla(219, 56%, 21%, 0.1);
  --shadow-2: 0 16px 32px hsla(188, 63%, 7%, 0.1);

}




/*-----------------------------------*\
  #RESET
\*-----------------------------------*/

*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}

a,
img,
span,
button,
ion-icon {
  display: block;
}

button {
  border: none;
  background: none;
  font: inherit;
  text-align: left;
  cursor: pointer;
}

address {
  font-style: normal;
}

ion-icon {
  pointer-events: none;
}

html {
  font-family: var(--ff-mont);
  scroll-behavior: smooth;
}

body {
  /* background: var(--white); */
  background: white;
}

/*-----------------------------------*\
  #REUSED STYLE
\*-----------------------------------*/



button,
a {
  transition: var(--transition);
}

.h1,
.h2,
.h3 {
  color: var(--myc1);
  font-family: var(--ff-galada);
  line-height: 1.3;
}



/* navbar */

.nav {
  border: 1px solid #a2a2a2;
  background-color: #f4f4f4;
  -webkit-box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.75);
  -moz-box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.75);
  box-shadow: 0px 0px 14px 0px rgba(0, 0, 0, 0.75);
  border-radius: 2px;
  position: fixed;
  z-index: 5;
  width: 100%;
}

li>a {
  color: #34495e;
  font-size: 16px;
}

.navbar-list a {
  padding: 10px 2px;
  text-transform: uppercase;
  text-align: center;
  display: block;
  font-weight: 600;
}

.navbar-list {
    display: flex;
    align-items: center;
    gap: 30px;
  }

.h1 {
  font-size: var(--fs-1);
  line-height: 1;
}

.h2 {
  font-size: var(--fs-2);
}

.h3 {
  font-size: var(--fs-4);
  font-weight: var(--font-weight, 700);
}

.h3>a {
  color: inherit;
}



::-webkit-scrollbar {
  width: 10px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--white);
}

::-webkit-scrollbar-thumb {
  background: var(--cadet);
  border-left: 2px solid var(--white);
}





/*-----------------------------------*\
  #HEADER
\*-----------------------------------*/

.logos {
  font-family: var(--ff-righteous);
  color: var(--myc1);
}


.header {
  position: relative;
  z-index: 2;
}

.header-top {
  background: var(--prussian-blue);
  padding-block: 15px;
}

.header-top .container,
.header-top-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.header-top .container {
  gap: 8px 20px;
}

.header-top-list {
  gap: 15px;
}

.header-top-link {
  color: var(--white);
  font-size: var(--fs-6);
  font-weight: var(--fw-700);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 5px;
}

.header-top-link:is(:hover, :focus) {
  color: var(--myc3);
}

.header-top-link ion-icon {
  color: var(--myc3);
  font-size: 15px;
  --ionicon-stroke-width: 60px;
}

.header-top .wrapper,
.header-top-social-list {
  display: flex;
  align-items: center;
}

.header-top .wrapper {
  gap: 20px;
}
  a {
    display: inline-block;
    text-decoration: none;
    -webkit-transition: all 0.4s ease;
    -o-transition: all 0.4s ease;
    -moz-transition: all 0.4s ease;
    transition: all 0.4s ease;
  }

.header-top-social-list {
  gap: 8px;
}
  a:link {
    text-decoration: none;
  }

.header-top-social-link {
  color: var(--white);
  font-size: 15px;
}
  a:visited {
    text-decoration: none;
  }

.header-top-btn {
  background: var(--myc3);
  color: var(--white);
  font-size: var(--fs-6);
  font-weight: var(--fw-700);
  padding: 4px 15px;
}
  a:hover {
    text-decoration: none;
  }

.header-top-btn:is(:hover, :focus) {
  --myc3: hsl(7, 72%, 46%);
}
  a:active {
    text-decoration: none;
  }

  /**
   * HEADER
   */

.header-bottom {
  background: var(--white);
  padding-block: 25px;
}

.header-bottom .logo img {
  margin-inline: auto;
}

